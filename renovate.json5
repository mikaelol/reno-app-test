{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
    ":semanticCommitTypeAll(build)",
    ":prHourlyLimitNone",
    "regexManagers:dockerfileVersions",
  ],
  "golang": {
    "enabled": false,
  },
  "github-actions": {
    "enabled": false,
  },
  "regexManagers": [
    {
      "fileMatch": [".*"],
      "matchStrings": [
        "renovate:\\s+datasource=(?<datasource>\\S+?) depName=(?<depName>\\S+?)( versioning=(?<versioning>.+?))?( registryUrl=(?<registryUrl>.+?))?\\s+(\\S+?_)?(VERSION|version|TAG|tag)\\s*[?]?[=:]\\s*(?<currentValue>\\S+?)",
      ],
      "versioningTemplate": "{{#if versioning}}{{{versioning}}}{{else}}semver{{/if}}",
    },
  ],
}
