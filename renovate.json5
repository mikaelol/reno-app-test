{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
    ":semanticCommitTypeAll(build)",
    ":prHourlyLimitNone",
    "regexManagers:dockerfileVersions",
  ],
  "golang": {
    "enabled": false,
  },
  "github-actions": {
    "enabled": false,
  },
  "regexManagers": [
    {
      "fileMatch": [".*"],
      "matchStrings": [
        "renovate:\\s*datasource=(?<datasource>.*?) depName=(?<depName>[^\\s]+?)( versioning=(?<versioning>.*?))?( registryUrl=(?<registryUrl>.*?))?\\s+(.+?_)?(VERSION|version|TAG|tag)\\s*[?]?[=:]\\s*(?<currentValue>[^\\s]+?)",
      ],
      "versioningTemplate": "{{#if versioning}}{{{versioning}}}{{else}}semver{{/if}}",
    },
  ],
}
