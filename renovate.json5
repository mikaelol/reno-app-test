{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
    ":semanticCommitTypeAll(ci)",
    ":prHourlyLimitNone",
    "regexManagers:dockerfileVersions",
  ],
  "packageRules": [
    {
      "matchPackageNames": [
        "ghcr.io/aquasecurity/trivy",
      ],
      "semanticCommitType": "build",
    }
  ],
  "kubernetes": {
    "fileMatch": ["test/e2e-test/stateful-set.yaml$"]
  },
  "ignorePaths": [],
  "golang": {
    "enabled": false,
  },
  "github-actions": {
    "enabled": false,
  },
  "regexManagers": [
    {
      "fileMatch": [".*"],
      "matchStrings": [
        "renovate:\\s+datasource=(?<datasource>\\S+?) depName=(?<depName>\\S+?)( versioning=(?<versioning>\\S+?))?( registryUrl=(?<registryUrl>\\S+?))?\\s+(\\S+?_)?(VERSION|version|TAG|tag)\\s*[?]?[=:]\\s*(?<currentValue>\\S+)",
      ],
      "versioningTemplate": "{{#if versioning}}{{{versioning}}}{{else}}semver{{/if}}",
    },
    {
      "fileMatch": [".+\\.ya?ml$"],
      "matchStrings": [
        "# renovate-image:( versioning=(?<versioning>.*?))?\\n\\s*(.+?_IMAGE|image)[=:]\\s*(?<depName>.+?):(?<currentValue>.+?)(\\s|$)",
      ],
      "datasourceTemplate": "docker",
      "versioningTemplate": "{{#if versioning}}{{{versioning}}}{{else}}docker{{/if}}",
    },
  ],
}
